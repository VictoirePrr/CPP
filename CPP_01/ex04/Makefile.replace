NAME	= replace
CXX		= c++
CXXFLAGS= -Wall -Wextra -Werror -std=c++98 -MMD
SRC		= main.cpp Replace.cpp
OOBJDIR   = build
OOBJ      = $(SRC:%.cpp=$(OOBJDIR)/%.o)

all: $(NAME)

$(NAME): $(OOBJ)
	$(CXX) $(CXXFLAGS) $(OOBJ) -o $(NAME)

$(OOBJDIR)/%.o: %.cpp
	@mkdir -p $(OOBJDIR)
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -rf $(OOBJDIR)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHOONY: all clean fclean re

-include $(OOBJ:%.o=%.d)
